<odoo>
    <record id="view_crm_ai_note_form" model="ir.ui.view">
        <field name="name">crm.ai.note.form</field>
        <field name="model">crm.ai.note</field>
        <field name="arch" type="xml">
            <form string="CRM AI Note">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="note_text"/>
                        <field name="summary" readonly="1"/>
                        <field name="sentiment" readonly="1"/>
                    </group>
                    <footer>
                        <button
                            name="action_analyze_note"
                            type="object"
                            string="Analyze with AI"
                            class="btn-primary"
                        />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
